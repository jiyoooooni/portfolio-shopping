{{#extend "scss"}}
{{#content "sprites-comment"}}{{/content}}
{{#content "sprites"}}{{/content}}
{{#content "spritesheet"}}
{{spritesheet_info.strings.name}}: (
  width: {{spritesheet.px.width}},
  height: {{spritesheet.px.height}},
  url: url({{sprites.0.url}}),
  images: (
    {{#each sprites}}
    {{strings.name}}: (
      offset_x: {{px.offset_x}},
      offset_y: {{px.offset_y}},
      width: {{px.width}},
      height: {{px.height}}
    ),
    {{/each}}
  )
)
{{/content}}
{{/extend}}
